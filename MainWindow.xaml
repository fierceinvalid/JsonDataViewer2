<Window x:Class="JsonDataViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:JsonDataViewer.ViewModels"
        mc:Ignorable="d"
        Title="AppEnhancer Permission Viewer" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        FontFamily="Roboto, Segoe UI, Arial"
        d:DataContext="{d:DesignInstance vm:MainWindowViewModel}">

    <Window.InputBindings>
        <KeyBinding Key="F" Modifiers="Control" Command="{x:Static ApplicationCommands.Find}"/>
    </Window.InputBindings>
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static ApplicationCommands.Find}" Executed="FocusFilter_Executed"/>
    </Window.CommandBindings>

    <Window.Resources>
        <!-- Accent + Neutral Brushes -->
        <SolidColorBrush x:Key="AccentBrush" Color="#0A84FF"/>
        <SolidColorBrush x:Key="AccentBrushLight" Color="#D6EBFF"/>
        <SolidColorBrush x:Key="TabStripBackground" Color="#E8E8E8"/>
        <SolidColorBrush x:Key="TabBorderBrush" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="SelectedRowBackground" Color="#007ACC"/>
        <SolidColorBrush x:Key="SelectedRowForeground" Color="White"/>
        <SolidColorBrush x:Key="ClearButtonDefaultBackground" Color="#E8E8E8"/>
        
        <!-- ClearButtonStyle must be defined before TabControl style to be available in the template -->
        <Style x:Key="ClearButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="16,6"/> 
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="{StaticResource ClearButtonDefaultBackground}"/>
            <Setter Property="BorderBrush" Value="#BBBBBB"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="PART_Border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" SnapsToDevicePixels="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PART_Border" Property="Background" Value="#005A9E"/>
                                <Setter TargetName="PART_Border" Property="BorderBrush" Value="#004B85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="PART_Border" Property="Background" Value="#004675"/>
                                <Setter TargetName="PART_Border" Property="BorderBrush" Value="#00385C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource ClearButtonDefaultBackground}"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Normal"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- PanelHeaderButtonStyle must also be defined before TabControl style -->
        <Style x:Key="PanelHeaderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#ECECEC"/>
            <Setter Property="Foreground" Value="#4A4A4A"/>
            <Setter Property="BorderBrush" Value="#DADADA"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="FontFamily" Value="Roboto, Segoe UI, Arial"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                                <Setter Property="BorderBrush" Value="#0A84FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sidebar footer button styled like nav items with selection bar support -->
        <Style x:Key="SidebarFooterNavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontFamily" Value="Roboto, Segoe UI, Arial"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="SelectionBar"
                                    Grid.Column="0"
                                    Background="{StaticResource AccentBrush}"
                                    CornerRadius="2,0,0,2"
                                    Visibility="Collapsed"/>

                            <Border x:Name="HeaderBorder"
                                    Grid.Column="1"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HeaderBorder" Property="Background" Value="#F7F9FC"/>
                                <Setter Property="Foreground" Value="#0A84FF"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="SelectionBar" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="HeaderBorder" Property="Background" Value="#F2F6FF"/>
                                <Setter Property="Foreground" Value="#0A84FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid SnapsToDevicePixels="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="SelectionBar"
                                    Grid.Column="0"
                                    Background="{StaticResource AccentBrush}"
                                    CornerRadius="2,0,0,2"
                                    Visibility="Collapsed"/>

                                <Border x:Name="HeaderBorder"
                                    Grid.Column="1"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="0"
                                    CornerRadius="6"
                                    Padding="0">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  ContentSource="Header"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HeaderBorder" Property="Background" Value="#F7F9FC"/>
                                <Setter TargetName="HeaderBorder" Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#0A84FF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="SelectionBar" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="HeaderBorder" Property="Background" Value="#F2F6FF"/>
                                <Setter TargetName="HeaderBorder" Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#0A84FF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="HeaderBorder" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="TabStripPlacement" Value="Left"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid ClipToBounds="True" SnapsToDevicePixels="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Background="{StaticResource TabStripBackground}" BorderBrush="Transparent" BorderThickness="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TabPanel IsItemsHost="True"
                                              Margin="8,8,8,8"
                                              Background="Transparent"
                                              Panel.ZIndex="1"/>

                                    <!-- Sidebar footer: Settings -->
                                    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="8,0,8,8">
                                        <Button Content="Settings"
                                            Command="{Binding NavigateToSettingsCommand}"
                                            Style="{StaticResource SidebarFooterNavButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                                <Border Name="ContentBorder"
                                    Grid.Column="1"
                                    Background="White"
                                    BorderBrush="#E5E5E5"
                                    BorderThickness="1,1,1,1"
                                    CornerRadius="6"
                                    Padding="10">
                                <ContentPresenter ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="White"/> 
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>


        
        <Style x:Key="CleanDataGridStyle" TargetType="DataGrid" BasedOn="{StaticResource {x:Type DataGrid}}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="AlternationCount" Value="2"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="EnableRowVirtualization" Value="True"/>
            <Setter Property="EnableColumnVirtualization" Value="True"/>
            <Setter Property="VirtualizingStackPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingStackPanel.VirtualizationMode" Value="Recycling"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#EEEEEE"/>
            <Setter Property="RowDetailsVisibilityMode" Value="Collapsed"/>
            <Setter Property="MaxHeight" Value="5000"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="ColumnHeaderHeight" Value="32"/>
            <Setter Property="ColumnWidth" Value="SizeToCells"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F8F8"/>
            <Setter Property="RowBackground" Value="White"/>

            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                        <Setter Property="Padding" Value="10,6"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Background" Value="#F5F6F8"/>
                        <Setter Property="Foreground" Value="#4A4A4A"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderBrush" Value="#DDDDDD"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E9F2FF"/>
                                <Setter Property="BorderBrush" Value="#0A84FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        
                        <Style.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#007ACC"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>
                        </Style.Resources>

                        <Style.Triggers>
                            <Trigger Property="AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#F8F8F8"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource SelectedRowBackground}"/>
                                <Setter Property="Foreground" Value="{StaticResource SelectedRowForeground}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="10,6"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource SelectedRowForeground}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SubtleGridSplitterStyle" TargetType="GridSplitter">
            <Setter Property="Background" Value="#DDDDDD"/>
            <Setter Property="BorderBrush" Value="#BBBBBB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="Cursor" Value="SizeWE"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0A84FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SectionHeaderBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

    </Window.Resources>

    <Grid Background="#E8E8E8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="*"/> 
            <RowDefinition Height="Auto"/> 
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <Border Grid.Row="1" Background="#333333" Padding="10,2,0,2" Margin="0,5,0,0" BorderBrush="#33222222" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" 
                        Source="assets/appenhancer_logo.png" 
                        Width="32" 
                        Height="32" 
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                                Text="{Binding MainHeaderText}" 
                            FontSize="18" 
                            FontWeight="Bold" 
                            Foreground="White" 
                            VerticalAlignment="Center"/>

                <Border Grid.Column="2" Background="#333333" Height="50" VerticalAlignment="Center" Padding="0,0,15,0">
                    <Image Source="assets/arrows_solid.png"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Height="120"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"
                           Margin="0"/>
                </Border>

                <!-- Clear Selection moved to left sidebar footer -->
            </Grid>
        </Border>

        <Grid Grid.Row="2" Margin="10,10,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TabControl Grid.Column="0"
                        Grid.ColumnSpan="2"
                        SelectedIndex="{Binding SelectedTabIndex}"
                        SelectionChanged="TabControl_SelectionChanged">
                <TabItem Header="User View" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> 
                        <RowDefinition Height="60*"/> 
                        <RowDefinition Height="3"/> 
                        <RowDefinition Height="40*"/> 
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0" Margin="0,5,0,10">
                        <Grid.ColumnDefinitions>
                            <!-- Left: Filter label and box -->
                            <ColumnDefinition Width="*"/>
                            <!-- Right: View Mode label + dropdown + user count -->
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Filter on the left -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBlock Text="Filter User:" 
                                       FontWeight="Normal"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <Grid Width="300">
                                <TextBox x:Name="FilterTextBox"
                                         Text="{Binding UserSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="6"
                                         Height="32" />
                                <TextBlock Text="Teller No, Name, Title, Department"
                                           Foreground="LightGray"
                                           VerticalAlignment="Center"
                                           Margin="9,0,0,0"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=FilterTextBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <Button Content="âœ•" Width="22" Height="22" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,6,0"
                                        CommandParameter="{Binding ElementName=FilterTextBox}"
                                        Click="ClearFilter_Click"
                                        ToolTip="Clear filter">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text.Length, ElementName=FilterTextBox}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                            <Button Content="Clear Selection"
                                    Command="{Binding ClearAllSelectionsCommand}"
                                    Style="{StaticResource ClearButtonStyle}"
                                    IsEnabled="{Binding IsAnythingSelected}"
                                    Margin="12,0,0,0"
                                    VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- View Mode anchored to the right -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="View Mode:" 
                                       FontWeight="Normal"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <ComboBox ItemsSource="{Binding DetailViewModes}"
                                      SelectedItem="{Binding SelectedDetailViewMode}"
                                      DisplayMemberPath="Name"
                                      VerticalContentAlignment="Center"
                                      Height="30"
                                      Width="200"/>
                        </StackPanel>

                        <!-- UserCountText removed per request -->
                    </Grid>
                    
                        <Grid Grid.Row="1">
                            <DataGrid
                                x:Name="UsersDataGrid"
                                Style="{StaticResource CleanDataGridStyle}"
                                AlternationCount="2"
                                ItemsSource="{Binding AllUsersList}" 
                                SelectedItem="{Binding SelectedUser}"
                                IsReadOnly="True"
                                AutoGenerateColumns="False"
                                ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Teller No." Binding="{Binding SamAccountName}" Width="Auto"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="Auto"/>
                                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="Auto"/>
                                    <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="*" MinWidth="140"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <TextBlock Text="No users to show" Foreground="#888" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=UsersDataGrid, Path=HasItems}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                    <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" ResizeDirection="Rows" Cursor="SizeNS" Style="{StaticResource SubtleGridSplitterStyle}"/>
                    
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#FFFFFF" Padding="6" CornerRadius="4" BorderBrush="#DDDDDD" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Button Grid.Row="0" Command="{Binding TogglePanel1SortCommand}" Style="{StaticResource PanelHeaderButtonStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Panel1ColumnHeader}" FontWeight="Bold" Foreground="#4A4A4A" VerticalAlignment="Center"/>
                                        <Grid Grid.Column="1" VerticalAlignment="Center" Width="16" Height="16" Margin="8,0,0,0">
                                            <Path Data="M 6 14 L 14 6 L 22 14 Z" Fill="#666" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <Path.Style>
                                                    <Style TargetType="Path">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Panel1SortDirection}" Value="Ascending">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                            <Path Data="M 6 10 L 14 18 L 22 10 Z" Fill="#666" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <Path.Style>
                                                    <Style TargetType="Path">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Panel1SortDirection}" Value="Descending">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                        </Grid>
                                    </Grid>
                                </Button>
                                <DataGrid Grid.Row="1"
                                    Style="{StaticResource CleanDataGridStyle}"
                                    AlternationCount="2"
                                    ItemsSource="{Binding Panel1ItemsSource}"
                                    SelectedItem="{Binding SelectedPanel1Item}"
                                    HeadersVisibility="None"
                                    IsReadOnly="True"
                                    AutoGenerateColumns="False"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <DataGrid.Columns>
                                        <!-- Header is now part of the button above -->
                                        <DataGridTextColumn Binding="{Binding Name}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                        
                        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" ResizeDirection="Columns" Style="{StaticResource SubtleGridSplitterStyle}"/>
                        
                        <Border Grid.Column="2" Background="#FFFFFF" Padding="6" CornerRadius="4" BorderBrush="#DDDDDD" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Button Grid.Row="0" Command="{Binding TogglePanel2SortCommand}" Style="{StaticResource PanelHeaderButtonStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
