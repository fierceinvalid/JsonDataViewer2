<Window x:Class="JsonDataViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:JsonDataViewer.ViewModels"
        mc:Ignorable="d"
        Title="AppEnhancer Permission Viewer" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance vm:MainWindowViewModel}">

    <Window.Resources>
        <SolidColorBrush x:Key="SelectedRowBackground" Color="#007ACC"/>
        <SolidColorBrush x:Key="SelectedRowForeground" Color="White"/>
        <SolidColorBrush x:Key="ClearButtonDefaultBackground" Color="#E8E8E8"/>
        
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,1,0"/>
            <Setter Property="Background" Value="#E0E0E0"/> <!-- Default background -->
            <Setter Property="BorderBrush" Value="#CCCCCC"/> <!-- Default border color -->
            <Setter Property="BorderThickness" Value="0"/>
            
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid SnapsToDevicePixels="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="3"/> 
                            </Grid.RowDefinitions>
                            
                            <Border Name="Border"
                                    Grid.Row="0"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1,1,1,1"
                                    Margin="0"
                                    CornerRadius="5,5,0,0">
                                    <ContentPresenter x:Name="ContentSite"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    ContentSource="Header"
                                                    Margin="{TemplateBinding Padding}"/>
                                </Border>

                            <Border x:Name="SelectionUnderline"
                                    Grid.Row="1"
                                    Height="3"
                                    Background="#007ACC" 
                                    Visibility="Collapsed"/>
                            
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/> <!-- Softer hover background -->
                                <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC"/> <!-- Highlight border on hover -->
                                <Setter Property="Foreground" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="White"/> <!-- Make top, left, right borders white -->
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0"/> <!-- Hide bottom border -->
                                <Setter TargetName="SelectionUnderline" Property="Visibility" Value="Visible"/> 
                                <Setter Property="Foreground" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid ClipToBounds="True" SnapsToDevicePixels="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TabPanel Grid.Row="0"
                                    IsItemsHost="True"
                                    Margin="0,0,0,0"
                                    Background="Transparent"
                                    Panel.ZIndex="1"/>
                            
                            <Border Name="ContentBorder"
                                    Grid.Row="1"
                                    Background="White" 
                                    Grid.ColumnSpan="2"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1,1,1,1" 
                                    Padding="10">
                                <ContentPresenter ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="White"/> 
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        
        <Style x:Key="ClearButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="8,3"/> 
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="{StaticResource ClearButtonDefaultBackground}"/>
            <Setter Property="BorderBrush" Value="#BBBBBB"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="PART_Border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PART_Border" Property="Background" Value="#005A9E"/>
                                <Setter TargetName="PART_Border" Property="BorderBrush" Value="#004B85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="PART_Border" Property="Background" Value="#004675"/>
                                <Setter TargetName="PART_Border" Property="BorderBrush" Value="#00385C"/>
                                <Setter TargetName="PART_Border" Property="Padding" Value="8,2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource ClearButtonDefaultBackground}"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Normal"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CleanDataGridStyle" TargetType="DataGrid" BasedOn="{StaticResource {x:Type DataGrid}}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowDetailsVisibilityMode" Value="Collapsed"/>
            <Setter Property="MaxHeight" Value="5000"/>
            
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        
                        <Style.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#007ACC"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>
                        </Style.Resources>

                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource SelectedRowBackground}"/>
                                <Setter Property="Foreground" Value="{StaticResource SelectedRowForeground}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                        <Setter Property="Padding" Value="5,3"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource SelectedRowForeground}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SubtleGridSplitterStyle" TargetType="GridSplitter">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#BBBBBB"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Opacity" Value="0.7"/>
        </Style>

        <Style x:Key="SectionHeaderBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

    </Window.Resources>

    <Grid Background="#E8E8E8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="*"/> 
            <RowDefinition Height="Auto"/> 
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <Separator/>
                <MenuItem Header="E_xit"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>

        <Border Grid.Row="1" Background="#333333" Padding="12" Margin="0,5,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" 
                        Source="assets/appenhancer_logo.png" 
                        Width="32" 
                        Height="32" 
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                                Text="{Binding MainHeaderText}" 
                            FontSize="20" 
                            FontWeight="Bold" 
                            Foreground="White" 
                            VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Grid Grid.Row="2" Margin="10,10,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TabControl Grid.Column="0"
                        Grid.ColumnSpan="2"
                        SelectedIndex="{Binding SelectedTabIndex}"
                        SelectionChanged="TabControl_SelectionChanged">
                <TabItem Header="User View" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> 
                        <RowDefinition Height="60*"/> 
                        <RowDefinition Height="3"/> 
                        <RowDefinition Height="40*"/> 
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0" Margin="0,5,0,10">
                        <Grid.ColumnDefinitions>
                            <!-- Left: Filter label and box -->
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="300"/>
                            <!-- spacer -->
                            <ColumnDefinition Width="*"/>
                            <!-- Right: View Mode label + dropdown + user count -->
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Filter on the left -->
                        <TextBlock Grid.Column="0"
                                   Text="Filter User:" 
                                   FontWeight="SemiBold"
                                   Foreground="Black"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>

                        <Grid Grid.Column="1" Width="300">
                            <TextBox x:Name="FilterTextBox"
                                     Text="{Binding UserSearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="6"
                                     Height="32"
                                     GotFocus="FilterTextBox_GotFocus"
                                     LostFocus="FilterTextBox_LostFocus"
                                     Loaded="FilterTextBox_Loaded" />
                            <TextBlock Text="Filter By Teller No, Name, Title, Department"
                                       Foreground="LightGray"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=FilterTextBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <!-- View Mode anchored to the right -->
                        <TextBlock Grid.Column="3"
                                   Text="View Mode:" 
                                   FontWeight="SemiBold"
                                   Foreground="Black"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,0"/>

                        <ComboBox Grid.Column="4"
                                  ItemsSource="{Binding DetailViewModes}"
                                  SelectedItem="{Binding SelectedDetailViewMode}"
                                  DisplayMemberPath="Name"
                                  VerticalContentAlignment="Center"
                                  Height="30"
                                  HorizontalAlignment="Right"/>

                        <TextBlock Grid.Column="5" 
                                   Text="{Binding UserCountText}" 
                                   VerticalAlignment="Center" 
                                   FontWeight="SemiBold"
                                   Margin="12,0,0,0"/>
                    </Grid>
                    
                        <DataGrid
                            Grid.Row="1"
                            x:Name="UsersDataGrid"
                            Style="{StaticResource CleanDataGridStyle}"
                            ItemsSource="{Binding AllUsersList}" 
                            SelectedItem="{Binding SelectedUser}"
                            IsReadOnly="True"
                            AutoGenerateColumns="False"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="" Binding="{Binding SamAccountName}" Width="Auto"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="Auto"/>
                                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="Auto"/>
                                <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                    <GridSplitter Grid.Row="2" Height="3" HorizontalAlignment="Stretch" Style="{StaticResource SubtleGridSplitterStyle}"/>
                    
                    <Grid Grid.Row="3" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#FFFFFF" Padding="6" CornerRadius="4" BorderBrush="#DDDDDD" BorderThickness="1">
                            <StackPanel>
                                <Border Style="{StaticResource SectionHeaderBorderStyle}">
                                    <TextBlock Text="{Binding Panel1Header}" Style="{StaticResource HeaderTextStyle}" Background="Transparent"/>
                                </Border>
                                    <DataGrid 
                                        Style="{StaticResource CleanDataGridStyle}"
                                        ItemsSource="{Binding Panel1ItemsSource}"
                                        SelectedItem="{Binding SelectedPanel1Item}"
                                        IsReadOnly="True"
                                        AutoGenerateColumns="False"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                            </StackPanel>
                        </Border>
                        
                        <GridSplitter Grid.Column="1" Width="3" VerticalAlignment="Stretch" Style="{StaticResource SubtleGridSplitterStyle}"/>
                        
                        <Border Grid.Column="2" Background="#FFFFFF" Padding="6" CornerRadius="4" BorderBrush="#DDDDDD" BorderThickness="1">
                            <StackPanel>
                                <Border Style="{StaticResource SectionHeaderBorderStyle}">
                                    <TextBlock Text="{Binding Panel2Header}" Style="{StaticResource HeaderTextStyle}" Background="Transparent"/>
                                </Border>
                                    <DataGrid 
                                        Style="{StaticResource CleanDataGridStyle}"
                                        ItemsSource="{Binding Panel2ItemsSource}"
                                        SelectedItem="{Binding SelectedPanel2Item}"
                                        IsReadOnly="True"
                                        AutoGenerateColumns="False"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Name" Binding="{Binding AppName}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                            </StackPanel>
                        </Border>
                        
                        <GridSplitter Grid.Column="3" Width="3" VerticalAlignment="Stretch" Style="{StaticResource SubtleGridSplitterStyle}"/>
                        
                        <Border Grid.Column="4" Background="#FFFFFF" Padding="6" CornerRadius="4" BorderBrush="#DDDDDD" BorderThickness="1">
                            <StackPanel>
                                <Border Style="{StaticResource SectionHeaderBorderStyle}">
                                    <TextBlock Text="Permissions" Style="{StaticResource HeaderTextStyle}" Background="Transparent"/>
                                </Border>
                                    <DataGrid 
                                        Style="{StaticResource CleanDataGridStyle}"
                                        ItemsSource="{Binding AppPermissions}"
                                        IsReadOnly="True"
                                        AutoGenerateColumns="False"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Name" Binding="{Binding PermissionName}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Group View" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40*"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="60*"/>
                    </Grid.RowDefinitions>

                    <!-- Top section: All Groups + Apps/Permissions (40%) -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40*"/> 
                            <ColumnDefinition Width="3"/>
                            <ColumnDefinition Width="60*"/> 
                        </Grid.ColumnDefinitions>
                        
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="All Groups" Style="{StaticResource HeaderTextStyle}" Grid.Row="0"/>
                            <DataGrid 
                                Grid.Row="1"
                                Style="{StaticResource CleanDataGridStyle}"
                                ItemsSource="{Binding AllGroupsList}"
                                SelectedItem="{Binding SelectedGroupTabGroup}"
                                IsReadOnly="True"
                                AutoGenerateColumns="False"
                                ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                        <GridSplitter Grid.Column="1" Width="3" VerticalAlignment="Stretch" Style="{StaticResource SubtleGridSplitterStyle}"/>

                        <Grid Grid.Column="2" Margin="10,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="3"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="3"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Applications in Group" Style="{StaticResource HeaderTextStyle}" Grid.Row="0"/>
                                <DataGrid 
                                    Grid.Row="1"
                                    Style="{StaticResource CleanDataGridStyle}"
                                    ItemsSource="{Binding GroupApps}"
                                    SelectedItem="{Binding SelectedAppTabApp}"
                                    IsReadOnly="True"
                                    AutoGenerateColumns="False"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding AppName}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                            
                            <GridSplitter Grid.Column="1" Width="3" VerticalAlignment="Stretch" Style="{StaticResource SubtleGridSplitterStyle}"/>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Permissions" Style="{StaticResource HeaderTextStyle}"/>
                                <DataGrid 
                                    Style="{StaticResource CleanDataGridStyle}"
                                    ItemsSource="{Binding AppPermissions}"
                                    IsReadOnly="True"
                                    AutoGenerateColumns="False"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Permission" Binding="{Binding PermissionName}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <GridSplitter Grid.Row="1" Height="3" HorizontalAlignment="Stretch" Style="{StaticResource SubtleGridSplitterStyle}"/>

                    <!-- Bottom section: Filter + Users (60%) -->
                    <Grid Grid.Row="2" Margin="0,5,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                    Text="Filter Users:" 
                                    FontWeight="SemiBold" 
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"/>

                            <TextBox Grid.Column="1" 
                                    Text="{Binding GroupUserSearchText, UpdateSourceTrigger=PropertyChanged}" 
                                    Padding="5" 
                                    Height="30" />
                        </Grid>

                        <DataGrid 
                                Grid.Row="1"
                                Style="{StaticResource CleanDataGridStyle}"
                                ItemsSource="{Binding GroupUsersList}" 
                                IsReadOnly="True"
                                AutoGenerateColumns="False"
                                ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="User ID" Binding="{Binding SamAccountName}" Width="Auto"/>
                                <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="*"/>
                                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Application View" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40*"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="60*"/>
                    </Grid.RowDefinitions>

                    <!-- Top section: All Applications + Groups/Permissions (40%) -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40*"/> 
                            <ColumnDefinition Width="3"/>
                            <ColumnDefinition Width="60*"/> 
                        </Grid.ColumnDefinitions>
                        
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="All Applications" Style="{StaticResource HeaderTextStyle}" Grid.Row="0"/>
                            <DataGrid 
                                Grid.Row="1"
                                Style="{StaticResource CleanDataGridStyle}"
                                ItemsSource="{Binding AllAppsList}"
                                SelectedItem="{Binding SelectedAppTabApp}"
                                IsReadOnly="True"
                                AutoGenerateColumns="False"
                                ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding AppName}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                        <GridSplitter Grid.Column="1" Width="3" VerticalAlignment="Stretch" Style="{StaticResource SubtleGridSplitterStyle}"/>

                        <Grid Grid.Column="2" Margin="10,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="3"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Style="{StaticResource HeaderTextStyle}" Grid.Row="0">
                                    <Run Text="Groups using:"/>
                                    <Run Text="{Binding SelectedAppTabApp.AppName, TargetNullValue='(Select Application)'}" FontWeight="Normal"/>
                                </TextBlock>
                                <DataGrid 
                                    Grid.Row="1"
                                    Style="{StaticResource CleanDataGridStyle}"
                                    ItemsSource="{Binding AppGroups}"
                                    IsReadOnly="True"
                                    AutoGenerateColumns="False"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                            
                            <GridSplitter Grid.Column="1" Width="3" VerticalAlignment="Stretch" Style="{StaticResource SubtleGridSplitterStyle}"/>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Permissions" Style="{StaticResource HeaderTextStyle}"/>
                                <DataGrid 
                                    Style="{StaticResource CleanDataGridStyle}"
                                    ItemsSource="{Binding AppPermissions}"
                                    IsReadOnly="True"
                                    AutoGenerateColumns="False"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Permission" Binding="{Binding PermissionName}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <GridSplitter Grid.Row="1" Height="3" HorizontalAlignment="Stretch" Style="{StaticResource SubtleGridSplitterStyle}"/>

                    <!-- Bottom section: Users for selected app (60%) -->
                    <Grid Grid.Row="2" Margin="0,5,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                    Text="Filter Users:" 
                                    FontWeight="SemiBold" 
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"/>

                            <TextBox Grid.Column="1" 
                                    Text="{Binding AppUserSearchText, UpdateSourceTrigger=PropertyChanged}" 
                                    Padding="5" 
                                    Height="30" />
                        </Grid>

                        <DataGrid
                                Grid.Row="1"
                                Style="{StaticResource CleanDataGridStyle}"
                                ItemsSource="{Binding AppUsersList}" 
                                IsReadOnly="True"
                                AutoGenerateColumns="False"
                                ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="User ID" Binding="{Binding SamAccountName}" Width="Auto"/>
                                    <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="*"/>
                                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="Auto"/>
                                </DataGrid.Columns>
                            </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Permission View" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40*"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="60*"/>
                    </Grid.RowDefinitions>

                    <!-- Top section: All Permissions + Apps/Groups (40%) -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40*"/> 
                            <ColumnDefinition Width="3"/>
                            <ColumnDefinition Width="60*"/> 
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="All Permissions" Style="{StaticResource HeaderTextStyle}"/>
                            <DataGrid 
                                Style="{StaticResource CleanDataGridStyle}"
                                ItemsSource="{Binding AllPermissionsList}"
                                SelectedItem="{Binding SelectedPermTabPerm}"
                                IsReadOnly="True"
                                AutoGenerateColumns="False"
                                ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding PermissionName}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <GridSplitter Grid.Column="1" Width="3" VerticalAlignment="Stretch" Style="{StaticResource SubtleGridSplitterStyle}"/>

                        <Grid Grid.Column="2" Margin="10,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="3"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{StaticResource HeaderTextStyle}">
                                    <Run Text="Applications granting:"/>
                                    <Run Text="{Binding SelectedPermTabPerm.PermissionName, TargetNullValue='(Select Permission)'}" FontWeight="Normal"/>
                                </TextBlock>
                                <DataGrid 
                                    Style="{StaticResource CleanDataGridStyle}"
                                    ItemsSource="{Binding PermApplications}"
                                    IsReadOnly="True"
                                    AutoGenerateColumns="False"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Application Name" Binding="{Binding AppName}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                            
                            <GridSplitter Grid.Column="1" Width="3" VerticalAlignment="Stretch" Style="{StaticResource SubtleGridSplitterStyle}"/>

                            <StackPanel Grid.Column="2">
                                <TextBlock Style="{StaticResource HeaderTextStyle}">
                                    <Run Text="Groups granting:"/>
                                    <Run Text="{Binding SelectedPermTabPerm.PermissionName, TargetNullValue='(Select Permission)'}" FontWeight="Normal"/>
                                </TextBlock>
                                <DataGrid 
                                    Style="{StaticResource CleanDataGridStyle}"
                                    ItemsSource="{Binding PermGroups}"
                                    IsReadOnly="True"
                                    AutoGenerateColumns="False"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Group Name" Binding="{Binding Name}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <GridSplitter Grid.Row="1" Height="3" HorizontalAlignment="Stretch" Style="{StaticResource SubtleGridSplitterStyle}"/>

                    <!-- Bottom section: Users for selected permission (60%) -->
                    <Grid Grid.Row="2" Margin="0,5,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                    Text="Filter Users:" 
                                    FontWeight="SemiBold" 
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"/>

                            <TextBox Grid.Column="1" 
                                    Text="{Binding PermUserSearchText, UpdateSourceTrigger=PropertyChanged}" 
                                    Padding="5" 
                                    Height="30" />
                        </Grid>

                        <DataGrid
                                Grid.Row="1"
                                Style="{StaticResource CleanDataGridStyle}"
                                ItemsSource="{Binding PermUsersList}" 
                                IsReadOnly="True"
                                AutoGenerateColumns="False"
                                ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="User ID" Binding="{Binding SamAccountName}" Width="Auto"/>
                                    <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="*"/>
                                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="Auto"/>
                                </DataGrid.Columns>
                            </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>
            </TabControl>

                            <Button HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,-2,15,0"
                            Panel.ZIndex="100"
                            Height="38"
                            Content="Clear Selection"
                            Command="{Binding ClearAllSelectionsCommand}"
                            Style="{StaticResource ClearButtonStyle}"
                            IsEnabled="{Binding IsAnythingSelected}"/>
        </Grid>

        <StatusBar Grid.Row="3">
            <!-- This separator will expand to fill the available space, pushing the next item to the right -->
            <Separator/> 
            
            <!-- This item will now be on the far right -->
            <StatusBarItem DockPanel.Dock="Right">
                <TextBlock Text="Version 1.10" 
                           Foreground="#444444"
                           Margin="0,0,10,0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>