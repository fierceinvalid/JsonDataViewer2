                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                        </Grid>
                                    </Grid>
                                </Button>
                                <DataGrid Grid.Row="1"
                                    Style="{StaticResource CleanDataGridStyle}" MaxHeight="300"
                                    ItemsSource="{Binding PermGroups}"
                                    HeadersVisibility="None"
                                    IsReadOnly="True"
                                    AutoGenerateColumns="False"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <DataGrid.Columns>
                                        <!-- Header is now part of the button above -->
                                        <DataGridTextColumn Binding="{Binding Name}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </Grid>

                    <GridSplitter Grid.Row="1" Height="3" HorizontalAlignment="Stretch" Style="{StaticResource SubtleGridSplitterStyle}"/>

                    <!-- Bottom section: Users for selected permission (60%) -->
                    <Grid Grid.Row="2" Margin="0,5,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBlock Text="Filter Users:" 
                                       FontWeight="SemiBold"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <Grid Width="300">
                                <TextBox x:Name="PermFilterTextBox"
                                         Text="{Binding PermUserSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="6"
                                         Height="32"
                                         GotFocus="FilterTextBox_GotFocus"
                                         LostFocus="FilterTextBox_LostFocus"
                                         Loaded="FilterTextBox_Loaded" />
                                <TextBlock Text="Teller No, Name, Title, Department"
                                           Foreground="LightGray"
                                           VerticalAlignment="Center"
                                           Margin="9,0,0,0"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=PermFilterTextBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </StackPanel>

                        <DataGrid
                                Grid.Row="1"
                                Style="{StaticResource CleanDataGridStyle}"
                                ItemsSource="{Binding PermUsersList}" 
                                IsReadOnly="True"
                                AutoGenerateColumns="False"
                                ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Teller No." Binding="{Binding SamAccountName}" Width="Auto"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="Auto"/>
                                    <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>
            </TabControl>

                            <Button HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,-2,15,0"
                            Panel.ZIndex="100"
                            Height="38"
                            Content="Clear Selection"
                            Command="{Binding ClearAllSelectionsCommand}"
                            Style="{StaticResource ClearButtonStyle}"
                            IsEnabled="{Binding IsAnythingSelected}"/>
        </Grid>

        <StatusBar Grid.Row="3">
            <!-- This separator will expand to fill the available space, pushing the next item to the right -->
            <Separator/> 
            
            <!-- This item will now be on the far right -->
            <StatusBarItem DockPanel.Dock="Right">
                <TextBlock Text="Version 1.10" 
                           Foreground="#444444"
                           Margin="0,0,10,0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>